<div class="container">
  <div class="d-flex justify-content-between">
    <h2>List: <%= @list.name %>
    </h2>
    <%= link_to "Add bookmark" , new_list_bookmark_path(@list) %>
  </div>
  <%# Display all bookmarks %>
  <div class="row justify-content-center">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col7 col-lg-6">
        <strong>
          <%= bookmark.movie.title %>
        </strong>
        <%= bookmark.comment %>
        <%= link_to "delete" , bookmark_path(bookmark), method: :delete %>
        <div class="card" style="width: 18rem;">
          <img src="..." class="card-img-top" alt="...">
          <div class="card-body">
            <h5 class="card-title">Card title</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the
              card's content.</p>
          </div>
          <ul class="list-group list-group-flush">
            <li class="list-group-item">An item</li>
            <li class="list-group-item">A second item</li>
            <li class="list-group-item">A third item</li>
          </ul>
          <div class="card-body">
            <a href="#" class="card-link">Card link</a>
            <a href="#" class="card-link">Another link</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <%# Add a bookmark %>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit "Sumbit it bro" , class: 'btn btn-primary' %>
  <% end %>
  <%# Go back %>
  <%= link_to lists_path do %>
    <i class="fas fa-undo">Go Back</i>
  <% end %>
</div>
