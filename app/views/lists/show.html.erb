<div class="container">
  <div class="d-flex justify-content-between">
    <h2>List: <%= @list.name %>
    </h2>
    <%= link_to "Add bookmark" , new_list_bookmark_path(@list) %>
  </div>
  <%# Display all bookmarks %>
  <div class="row justify-content-center">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col-6">
        <div class="card mb-3" style="max-width: 540px;">
          <div class="row g-0">
            <div class="col-md-4">
              <%= image_tag bookmark.movie.poster_url, class: 'img-fluid rounded-start' %>
              <%# <img src="..." class="img-fluid rounded-start" alt="..."> %>
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= bookmark.movie.title %></h5>
                <p class="card-text"><%= bookmark.comment %></p>
                <%= link_to "delete" , bookmark_path(bookmark), method: :delete, class:'btn btn-primary' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
  <br>
  <%# Add a bookmark %>
  <%= simple_form_for [@list, @bookmark] do |f| %>
    <%= f.input :comment %>
    <%= f.association :movie %>
    <%= f.submit "Sumbit it bro" , class: 'btn btn-primary' %>
  <% end %>
  <%# Go back %>
  <%= link_to lists_path do %>
    <i class="fas fa-undo">Go Back</i>
  <% end %>
</div>
